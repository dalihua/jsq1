<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="calculator.woaizhangjia.com.zjcalculator.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/TbrTop"
        android:background="#999999">

        <TableRow
            android:id="@+id/TbrTop2"
            android:background="#999999"
            android:layout_width="match_parent"
            android:layout_below="@+id/TbrTop1"
            android:layout_height="85dip"
            >
            <Button
                android:id="@+id/btn7"
                android:layout_width="90dip"
                android:layout_height="85dip"
                android:padding="20dp"
                android:text="7"
                android:textColor="#FDFDFD"
                android:background="#999999"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn8"
                android:layout_width="90dip"
                android:layout_height="85dip"
                android:padding="20dp"
                android:text="8"
                android:textColor="#FDFDFD"
                android:background="#999999"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn9"
                android:layout_width="90dip"
                android:layout_height="85dip"
                android:padding="20dp"
                android:text="9"
                android:textColor="#FDFDFD"
                android:background="#999999"
                android:textSize="30sp"/>
            <Button
                android:id="@+id/btncheng"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="×"
                android:textColor="#FDFDFD"
                android:background="#999999"
                android:textSize="30sp"/>
        </TableRow>

        <TableRow
            android:id="@+id/TbrTop3"
            android:background="#999999"
            android:layout_width="match_parent"
            android:layout_below="@+id/TbrTop2"
            android:layout_height="85dip"
            >
            <Button
                android:id="@+id/btn4"
                android:layout_width="90dip"
                android:layout_height="85dip"
                android:padding="20dp"
                android:text="4"
                android:textColor="#FDFDFD"
                android:background="#999999"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn5"
                android:layout_width="90dip"
                android:layout_height="85dip"
                android:padding="20dp"
                android:text="5"
                android:textColor="#FDFDFD"
                android:background="#999999"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn6"
                android:layout_width="90dip"
                android:layout_height="85dip"
                android:padding="20dp"
                android:text="6"
                android:textColor="#FDFDFD"
                android:background="#999999"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnjian"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="-"
                android:textColor="#FDFDFD"
                android:background="#999999"
                android:textSize="30sp"/>
        </TableRow>

        <TableRow
            android:id="@+id/TbrTop4"
            android:background="#999999"
            android:layout_width="match_parent"
            android:layout_below="@+id/TbrTop3"
            android:layout_height="85dip"
            >
            <Button
                android:id="@+id/btn1"
                android:layout_width="90dip"
                android:layout_height="85dip"
                android:padding="20dp"
                android:text="1"
                android:textColor="#FDFDFD"
                android:background="#999999"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn2"
                android:layout_width="90dip"
                android:layout_height="85dip"
                android:padding="20dp"
                android:text="2"
                android:textColor="#FDFDFD"
                android:background="#999999"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn3"
                android:layout_width="90dip"
                android:layout_height="85dip"
                android:padding="20dp"
                android:text="3"
                android:textColor="#FDFDFD"
                android:background="#999999"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnjia"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="+"
                android:textColor="#FDFDFD"
                android:background="#999999"
                android:textSize="30sp"/>
        </TableRow>

        <TableRow
            android:id="@+id/TbrTop5"
            android:background="#999999"
            android:layout_width="match_parent"
            android:layout_below="@+id/TbrTop4"
            android:layout_height="85dip"
            >

            <Button
                android:id="@+id/btn0"
                android:layout_width="180dip"
                android:layout_height="85dip"
                android:padding="20dp"
                android:text="0"
                android:textColor="#FDFDFD"
                android:background="#999999"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btndian"
                android:layout_width="90dip"
                android:layout_height="85dip"
                android:padding="20px"
                android:text="."
                android:textColor="#FDFDFD"
                android:background="#999999"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btndenyu"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="="
                android:textColor="#FDFDFD"
                android:background="#999999"
                android:textSize="30sp"/>
        </TableRow>

        <TableRow
            android:id="@+id/TbrTop1"
            android:background="#999999"
            android:layout_width="match_parent"
            android:layout_height="85dip"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <Button
                android:id="@+id/btnC"
                android:layout_width="90dip"
                android:layout_height="85dip"
                android:padding="20dp"
                android:text="C"
                android:textColor="#FDFDFD"
                android:background="#999999"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btndel"
                android:layout_width="90dip"
                android:layout_height="85dip"
                android:padding="20dp"
                android:text="←"
                android:textColor="#FDFDFD"
                android:background="#999999"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnbaifenbi"
                android:layout_width="90dip"
                android:layout_height="85dip"
                android:padding="20dp"
                android:text="%"
                android:textColor="#FDFDFD"
                android:background="#999999"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btnchu"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:text="÷"
                android:textColor="#FDFDFD"
                android:elevation="0dp"
                android:background="#999999"
                android:textSize="30sp"/>
        </TableRow>
    </RelativeLayout>

    <TableRow
    android:layout_height="160sp"
    android:layout_width="match_parent"
    android:id="@+id/TbrTop"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="160sp"
            android:gravity="right|bottom"
            android:textSize="50sp"
            android:background="#ffffff"
            android:textColor="#000000"
            android:text=""
            android:id="@+id/tvxiansi" />
    </TableRow>
</RelativeLayout>

